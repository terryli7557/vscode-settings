{
  "window.zoomLevel": 1,

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "emmet.triggerExpansionOnTab": true,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    // "source.organizeImports": true
  },
  "editor.detectIndentation": true,
  "editor.parameterHints.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": false,
  "terminal.integrated.fontSize": 13,

  "[javascript]": {
    "editor.suggestSelection": "recentlyUsed"
  },

  "editor.tabSize": 2,
  "editor.folding": false,

  "files.exclude": {
    "USE_GITIGNORE": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },

  "eslint.autoFixOnSave": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "eslint.options": {
    "env": {
      "browser": true,
      "jest/globals": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-debugger": "off"
    }
  },

  "prettier.eslintIntegration": false,
  "prettier.bracketSpacing": false,
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.jsxBracketSameLine": false,
  "prettier.semi": false,
  "prettier.useTabs": false,
  "prettier.proseWrap": "always",

  "cSpell.languageSettings": [
    {"languageId": "*", "local": "en-US", "dictionaries": ["wordsEn"]}
  ],
  "workbench.activityBar.visible": false,

  "local-history.absolute": true,
  "local-history.path": "/Users/terryli/.vscode-history",

  "workbench.statusBar.visible": false,

  "workbench.colorCustomizations": {
    "scrollbarSlider.background": "#080200",

    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.background": "#080200",
    "editor.lineHighlightBackground": "#181818",
    "editorGroup.border": "#080200",
    "scrollbarSlider.hoverBackground": "#080200"
  },
  "editor.overviewRulerBorder": false,

  "workbench.colorTheme": "Oceanic Next (dimmed bg)",
  "workbench.editor.showTabs": false,
  "editor.lineNumbers": "off",
  "git.enabled": false
}
